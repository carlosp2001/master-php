{% extends 'base.html.twig' %}

{% block title %}Todas las tareas{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h2>{{task.title}}</h2>

        <p class="data-task">
            {{task.user.name}} {{task.user.surname}} {{task.createdAt|date('d/m/Y h:i')}} |
            {% if task.priority == 'high' %}
                {{ 'Alta' }}

            {% elseif task.priority == 'medium' %}
                {{ 'Media' }}
            {% elseif task.priority == 'low' %}
                {{ 'Baja' }}
            {% endif %} |
            {{task.hours}}
        </p>
        <p>{{task.content}}</p>


    </div>
{% endblock %}