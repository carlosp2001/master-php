{% extends 'layouts/master.html.twig' %}

{% block titulo %} Animales {% endblock %}

{# Heredar bloques #}
{% block cabecera %}
    {{ parent() }}
    <h2>{{ title }}</h2>
{% endblock %}

{% block contenido %}
    {#    <h1>{{ title }}</h1> #}
    {#    <h2>Tu nombre es: {{ nombre }}</h2> #}
    {#    <h2>Tus apellidos son: {{ apellidos }}</h2> #}

    {# Crear variables en twig #}
    {% set perro = 'Pastor aleman' %}
    <h4> {{ perro }} </h4>

    {#    Trabajar con arrays #}
    {{ dump(animales) }}
    {{ animales[1] }}

    {#    Trabajar con arrays asociativo #}
    {{ dump(aves) }}
    {{ aves.tipo ~ ' - ' ~ aves.raza }}

    {#    condicional #}
    {% if aves.tipo == 'palomo' %}
        <h1>Cuidado un palomo volador</h1>
    {% else %}
        <h2>No hay palomos a la vista</h2>
    {% endif %}

    {#    bucles #}
    {% if animales|length >= 0 %}
        <ul>
            {% for animal in animales %}
                <li>{{ animal }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {#    {% for i in 0..10 %} #}
    {% for i in 0..animales|length %}
        {{ i }}<br/>
    {% endfor %}


    {#    Inicia con / starts with #}
    {% if aves.color starts with 'gr' %}
        <h1>Empieza por G</h1>
    {% endif %}

    {#    Termina con / ends with #}
    {% if aves.color ends with 's' %}
        <h1>Termina por s</h1>
    {% endif %}

    <hr>
    <h1>Funciones</h1>
    {#    Funciones predefinidas #}
    {#    Sacar el numero menor #}
    {{ min([9, 11, 6, 99, 2]) }}
    {{ random(animales) }}

    {#    Sacar el numero mayor #}
    {{ max([9, 11, 6, 99, 2]) }}

    {#    Rango #}
    {% for i in range(0, 100, 5) %}
        {{ i }} <br>
    {% endfor %}

{% endblock %}